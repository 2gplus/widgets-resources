<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.2gplus.widget.web.datagrid.Datagrid" pluginWidget="true" offlineCapable="true" xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../../../../node_modules/mendix/custom_widget.xsd">
    <name>Data Grid 2G</name>
    <description />
    <studioProCategory>Data containers</studioProCategory>
    <studioCategory>Data Containers</studioCategory>
    <properties>
        <propertyGroup caption="General">
            <propertyGroup caption="General">
                <property key="advanced" type="boolean" defaultValue="false">
                    <caption>Enable advanced options</caption>
                    <description />
                </property>
                <property key="datasource" type="datasource" isList="true">
                    <caption>Data source</caption>
                    <description />
                </property>
                <property key="selectionMode" type="enumeration" defaultValue="single">
                    <caption>Selection mode</caption>
                    <description />
                    <enumerationValues>
                        <enumerationValue key="single">Single selection</enumerationValue>
                        <enumerationValue key="multi">Multi selection</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="sortingType" type="enumeration" required="true" defaultValue="local">
                    <caption>Sort Type</caption>
                    <description />
                    <enumerationValues>
                        <enumerationValue key="local">Local</enumerationValue>
                        <enumerationValue key="remote">Remote</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="sortAttribute" type="attribute" required="false">
                    <caption>Sort attribute</caption>
                    <description />
                    <attributeTypes>
                        <attributeType name="String" />
                    </attributeTypes>
                </property>
                <property key="sortAscending" type="attribute" required="false">
                    <caption>Sort ascending</caption>
                    <description />
                    <attributeTypes>
                        <attributeType name="Boolean" />
                    </attributeTypes>
                </property>
                <property key="onSortChangedAction" type="action" required="false">
                    <caption>Sort changed action</caption>
                    <description />
                </property>
            </propertyGroup>
            <propertyGroup caption="Columns">
                <property key="columns" type="object" isList="true">
                    <caption>Columns</caption>
                    <description />
                    <properties>
                        <propertyGroup caption="General">
                            <property key="showContentAs" type="enumeration" defaultValue="attribute">
                                <caption>Show</caption>
                                <description />
                                <enumerationValues>
                                    <enumerationValue key="attribute">Attribute</enumerationValue>
                                    <enumerationValue key="dynamicText">Dynamic text</enumerationValue>
                                    <enumerationValue key="customContent">Custom content</enumerationValue>
                                </enumerationValues>
                            </property>
                            <property key="attribute" type="attribute" dataSource="../datasource" required="false">
                                <caption>Attribute</caption>
                                <description>Attribute is required if the column can be sorted or filtered</description>
                                <attributeTypes>
                                    <attributeType name="String" />
                                    <attributeType name="AutoNumber" />
                                    <attributeType name="Boolean" />
                                    <attributeType name="DateTime" />
                                    <attributeType name="Decimal" />
                                    <attributeType name="Enum" />
                                    <attributeType name="Integer" />
                                    <attributeType name="Long" />
                                </attributeTypes>
                            </property>
                            <property key="content" type="widgets" dataSource="../datasource" required="false">
                                <caption>Custom content</caption>
                                <description />
                            </property>
                            <property key="dynamicText" type="textTemplate" dataSource="../datasource" required="false">
                                <caption>Dynamic text</caption>
                                <description />
                            </property>
                            <property key="header" type="textTemplate" required="false">
                                <caption>Caption</caption>
                                <description />
                            </property>
                            <property key="tooltip" type="textTemplate" required="false" dataSource="../datasource">
                                <caption>Tooltip</caption>
                                <description />
                            </property>
                            <property key="filter" type="widgets" required="false">
                                <caption>Filter</caption>
                                <description />
                            </property>
                            <property key="sortProperty" type="string" required="false">
                                <caption>Sort property</caption>
                                <description />
                            </property>
                        </propertyGroup>
                        <propertyGroup caption="Column capabilities">
                            <property key="sortable" type="boolean" defaultValue="true">
                                <caption>Can sort</caption>
                                <description />
                            </property>
                            <property key="resizable" type="boolean" defaultValue="true">
                                <caption>Can resize</caption>
                                <description />
                            </property>
                            <property key="draggable" type="boolean" defaultValue="true">
                                <caption>Can reorder</caption>
                                <description />
                            </property>
                            <property key="hidable" type="enumeration" defaultValue="yes">
                                <caption>Can hide</caption>
                                <description />
                                <enumerationValues>
                                    <enumerationValue key="yes">Yes</enumerationValue>
                                    <enumerationValue key="hidden">Yes, hidden by default</enumerationValue>
                                    <enumerationValue key="no">No</enumerationValue>
                                </enumerationValues>
                            </property>
                        </propertyGroup>
                        <propertyGroup caption="Appearance">
                            <property key="width" type="enumeration" defaultValue="autoFill">
                                <caption>Column width</caption>
                                <description />
                                <enumerationValues>
                                    <enumerationValue key="autoFill">Auto-fill</enumerationValue>
                                    <enumerationValue key="autoFit">Auto-fit content</enumerationValue>
                                    <enumerationValue key="manual">Manual</enumerationValue>
                                </enumerationValues>
                            </property>
                            <property key="size" type="integer" defaultValue="1">
                                <caption>Column size</caption>
                                <description />
                            </property>
                            <property key="alignment" type="enumeration" defaultValue="left">
                                <caption>Alignment</caption>
                                <description />
                                <enumerationValues>
                                    <enumerationValue key="left">Left</enumerationValue>
                                    <enumerationValue key="center">Center</enumerationValue>
                                    <enumerationValue key="right">Right</enumerationValue>
                                </enumerationValues>
                            </property>
                            <property key="columnClass" type="expression" required="false" dataSource="../datasource">
                                <caption>Dynamic cell class</caption>
                                <description />
                                <returnType type="String" />
                            </property>
                            <property key="wrapText" type="boolean" defaultValue="false">
                                <caption>Wrap text</caption>
                                <description />
                            </property>
                        </propertyGroup>
                    </properties>
                </property>
                <property key="columnsFilterable" type="boolean" defaultValue="true">
                    <caption>Show column filters</caption>
                    <description />
                </property>
            </propertyGroup>
            <propertyGroup caption="Rows">
                <property key="pageSize" type="integer" defaultValue="20">
                    <caption>Page size</caption>
                    <description />
                </property>
                <property key="pagination" type="enumeration" defaultValue="buttons">
                    <caption>Pagination</caption>
                    <description />
                    <enumerationValues>
                        <enumerationValue key="buttons">Paging buttons</enumerationValue>
                        <enumerationValue key="virtualScrolling">Virtual scrolling</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="pagingType" type="enumeration" defaultValue="default">
                    <caption>Paging type</caption>
                    <description />
                    <enumerationValues>
                        <enumerationValue key="default">Default</enumerationValue>
                        <enumerationValue key="remote">Remote</enumerationValue>
                    </enumerationValues>
                </property>

                <property key="pagingPosition" type="enumeration" defaultValue="bottom">
                    <caption>Position of paging buttons</caption>
                    <description />
                    <enumerationValues>
                        <enumerationValue key="bottom">Below grid</enumerationValue>
                        <enumerationValue key="top">Above grid</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="showEmptyPlaceholder" type="enumeration" defaultValue="none">
                    <caption>Empty list message</caption>
                    <description />
                    <enumerationValues>
                        <enumerationValue key="none">None</enumerationValue>
                        <enumerationValue key="custom">Custom</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="emptyPlaceholder" type="widgets" required="false">
                    <caption>Empty placeholder</caption>
                    <description />
                </property>
                <property key="rowClass" type="expression" required="false" dataSource="datasource">
                    <caption>Dynamic row class</caption>
                    <description />
                    <returnType type="String" />
                </property>
            </propertyGroup>
        </propertyGroup>
        <propertyGroup caption="CustomPaging">
            <property key="pagingAction" type="action" required="false">
                <caption>Paging action</caption>
                <description>Action to execute to retrieve the batch</description>
            </property>
            <property key="pagingDisplayType" type="enumeration" defaultValue="objectBased">
                <caption>Display</caption>
                <description />
                <enumerationValues>
                    <enumerationValue key="objectBased">Object count</enumerationValue>
                    <enumerationValue key="pageBased">Page count</enumerationValue>
                </enumerationValues>
            </property>
            <property key="pagingTotalCount" type="attribute" required="false">
                <caption>totalCount</caption>
                <description />
                <attributeTypes>
                    <attributeType name="Integer" />
                    <attributeType name="Long" />
                </attributeTypes>
            </property>
            <property key="pageNumber" type="attribute" required="false">
                <caption>Page number</caption>
                <description />
                <attributeTypes>
                    <attributeType name="Integer" />
                    <attributeType name="Long" />
                </attributeTypes>
            </property>
            <property key="pageSizeAttribute" type="attribute" required="false">
                <caption>Page size</caption>
                <description />
                <attributeTypes>
                    <attributeType name="Integer" />
                    <attributeType name="Long" />
                </attributeTypes>
            </property>
        </propertyGroup>
        <propertyGroup caption="Personalization">
            <propertyGroup caption="Column capabilities">
                <property key="columnsSortable" type="boolean" defaultValue="true">
                    <caption>Sorting</caption>
                    <description>Enable sorting for all columns unless specified otherwise in the column setting</description>
                </property>
                <property key="columnsResizable" type="boolean" defaultValue="true">
                    <caption>Resizing</caption>
                    <description>Enable resizing for all columns unless specified otherwise in the column setting</description>
                </property>
                <property key="columnsDraggable" type="boolean" defaultValue="true">
                    <caption>Reordering</caption>
                    <description>Enable reordering for all columns unless specified otherwise in the column setting</description>
                </property>
                <property key="columnsHidable" type="boolean" defaultValue="true">
                    <caption>Hiding</caption>
                    <description>Enable hiding for all columns unless specified otherwise in the column setting</description>
                </property>
            </propertyGroup>
            <propertyGroup caption="Configuration">
                <property key="configurationAttribute" type="attribute" required="false" onChange="onConfigurationChange">
                    <caption>Attribute</caption>
                    <description>
                        Attribute containing the personalized configuration of the capabilities. This
                        configuration is automatically stored and loaded. The attribute requires Unlimited String.
                    </description>
                    <attributeTypes>
                        <attributeType name="String" />
                    </attributeTypes>
                </property>
                <property key="onConfigurationChange" type="action">
                    <caption>On change</caption>
                    <description />
                </property>
            </propertyGroup>
        </propertyGroup>
        <propertyGroup caption="Filtering">
            <propertyGroup caption="Filters">
                <property key="showHeaderFilters" type="boolean" defaultValue="false">
                    <caption>Show header filters</caption>
                    <description />
                </property>
                <property key="filterList" type="object" isList="true" required="false">
                    <caption>Filters</caption>
                    <description />
                    <properties>
                        <propertyGroup caption="General">
                            <property key="filter" type="attribute" dataSource="../datasource">
                                <caption>Filter attribute</caption>
                                <description />
                                <attributeTypes>
                                    <attributeType name="String" />
                                    <attributeType name="AutoNumber" />
                                    <attributeType name="Boolean" />
                                    <attributeType name="DateTime" />
                                    <attributeType name="Decimal" />
                                    <attributeType name="Enum" />
                                    <attributeType name="Integer" />
                                    <attributeType name="Long" />
                                </attributeTypes>
                            </property>
                        </propertyGroup>
                    </properties>
                </property>
                <property key="filtersPlaceholder" type="widgets" required="false">
                    <caption>Filters placeholder</caption>
                    <description />
                </property>
            </propertyGroup>
        </propertyGroup>
        <propertyGroup caption="Accessibility">
            <propertyGroup caption="Accessibility">
                <property key="filterSectionTitle" type="textTemplate" required="false">
                    <caption>Filter section title</caption>
                    <description>Assistive technology will read this upon reaching a filtering or sorting section.</description>
                </property>
            </propertyGroup>
        </propertyGroup>
        <propertyGroup caption="TreeView">
            <property key="treeViewEnabled" type="boolean" defaultValue="false">
                <caption>Enabled</caption>
                <description />
            </property>
            <property key="treeViewPosition" type="enumeration" defaultValue="left">
                <caption>Icon Position</caption>
                <description>Default(Left) will position the expand icon in the first column, right in the last column</description>
                <enumerationValues>
                    <enumerationValue key="left">Left</enumerationValue>
                    <enumerationValue key="Right">Right</enumerationValue>
                </enumerationValues>
            </property>
            <property key="treeViewCondition" type="expression" required="false" dataSource="datasource">
                <caption>Show condition</caption>
                <description />
                <returnType type="Boolean" />
            </property>
            <property key="treeViewWidgets" type="widgets" dataSource="datasource" required="false">
                <caption>Tree view widgets</caption>
                <description>Widgets to show when treeView is expanded</description>
            </property>
        </propertyGroup>
        <propertyGroup caption="Buttons">
            <property key="tableLabel" type="textTemplate" required="false">
                <caption>Table label</caption>
                <description>Label to show at the top of the datagrid</description>
            </property>
            <property key="buttons" type="object" isList="true" required="false">
                <caption>Buttons</caption>
                <description />
                <properties>
                    <propertyGroup caption="General">
                        <property key="caption" type="textTemplate" required="false">
                            <caption>Caption</caption>
                            <description />
                        </property>
                        <property key="action" type="action" dataSource="../datasource" required="false">
                            <caption>Action</caption>
                            <description />
                        </property>
                        <property key="actionNoContext" type="action" required="false">
                            <caption>Action(no context)</caption>
                            <description />
                        </property>
                        <property key="tooltip" type="textTemplate" required="false">
                            <caption>Tooltip</caption>
                            <description />
                        </property>
                        <property key="icon" type="icon" required="false">
                            <caption>Icon</caption>
                            <description>Set icon class in appearance tab to use custom icons</description>
                        </property>
                        <property key="checkAuth" type="enumeration" defaultValue="False">
                            <caption>Check authentication</caption>
                            <description>
                                Check if the user is authorized to execute the action before render. (For
                                context buttons this means it will render when a selection is made and the user is
                                authorized)
                            </description>
                            <enumerationValues>
                                <enumerationValue key="True">True</enumerationValue>
                                <enumerationValue key="Attribute">Attribute</enumerationValue>
                                <enumerationValue key="False">False</enumerationValue>
                            </enumerationValues>
                        </property>
                        <property key="checkAuthAttribute" type="expression" required="false">
                            <caption>Check authentication expression</caption>
                            <description />
                            <returnType type="Boolean" />
                        </property>
                    </propertyGroup>
                    <propertyGroup caption="Appearance">
                        <property key="renderMode" type="enumeration" defaultValue="button">
                            <caption>Render mode</caption>
                            <description />
                            <enumerationValues>
                                <enumerationValue key="link">Link</enumerationValue>
                                <enumerationValue key="button">Button</enumerationValue>
                            </enumerationValues>
                        </property>
                        <property key="btnClass" type="string" defaultValue="" required="false">
                            <caption>Class</caption>
                            <description />
                        </property>
                        <property key="iconClass" type="string" defaultValue="" required="false">
                            <caption>Icon class</caption>
                            <description>
                                Icon class to use instead of Glyphicon (Overwrites any selected
                                glyphicon/image)
                            </description>
                        </property>
                        <property key="buttonStyle" type="enumeration" defaultValue="default">
                            <caption>Button style</caption>
                            <description />
                            <enumerationValues>
                                <enumerationValue key="default">Default</enumerationValue>
                                <enumerationValue key="inverse">Inverse</enumerationValue>
                                <enumerationValue key="primary">Primary</enumerationValue>
                                <enumerationValue key="info">Info</enumerationValue>
                                <enumerationValue key="success">Success</enumerationValue>
                                <enumerationValue key="warning">Warning</enumerationValue>
                                <enumerationValue key="danger">Danger</enumerationValue>
                            </enumerationValues>
                        </property>
                    </propertyGroup>
                </properties>
            </property>
        </propertyGroup>
        <propertyGroup caption="Events">
            <propertyGroup caption="Click events">
                <property key="onClick" type="action" required="false" dataSource="datasource">
                    <caption>On click action</caption>
                    <description />
                </property>

                <property key="defaultTrigger" type="enumeration" defaultValue="doubleClick">
                    <caption>Default Trigger</caption>
                    <description />
                    <enumerationValues>
                        <enumerationValue key="singleClick">Single click</enumerationValue>
                        <enumerationValue key="doubleClick">Double click</enumerationValue>
                    </enumerationValues>
                </property>
            </propertyGroup>
            <propertyGroup caption="Ctrl click events">
                <property key="ctrlClick" type="action" required="false" dataSource="datasource">
                    <caption>On ctrl click action</caption>
                    <description />
                </property>

                <property key="ctrlDefaultTrigger" type="enumeration" defaultValue="doubleClick">
                    <caption>Default ctrl Trigger</caption>
                    <description />
                    <enumerationValues>
                        <enumerationValue key="singleClick">Single ctrl click</enumerationValue>
                        <enumerationValue key="doubleClick">Double ctrl click</enumerationValue>
                    </enumerationValues>
                </property>
            </propertyGroup>
        </propertyGroup>
    </properties>
</widget>
