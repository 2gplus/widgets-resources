<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.mendix.widget.web.tooltip.Tooltip"
        needsEntityContext="true"
        pluginWidget="true"
        offlineCapable="true" xmlns="http://www.mendix.com/widget/1.0/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../../../../node_modules/mendix/custom_widget.xsd">
    <name>Tooltip</name>
    <description/>
    <studioProCategory>Display</studioProCategory>
    <studioCategory>Display</studioCategory>
    <helpUrl>https://docs.mendix.com/appstore/widgets/tooltip</helpUrl>
    <properties>
        <propertyGroup caption="General">
            <propertyGroup caption="General">
                <property key="trigger" type="widgets">
                    <caption>Trigger</caption>
                    <description/>
                </property>
                <property key="renderMethod" type="enumeration" defaultValue="text">
                    <caption>Render method</caption>
                    <description/>
                    <enumerationValues>
                        <enumerationValue key="text">Text</enumerationValue>
                        <enumerationValue key="custom">Custom</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="htmlMessage" type="widgets" required="false">
                    <caption>Content</caption>
                    <description/>
                </property>

                <property key="textMessage" type="textTemplate" required="false">
                    <caption>Tooltip</caption>
                    <description/>
                </property>

                <property key="position" type="enumeration" defaultValue="top">
                    <caption>Position</caption>
                    <description/>
                    <enumerationValues>
                        <enumerationValue key="topStart">Top start</enumerationValue>
                        <enumerationValue key="top">Top</enumerationValue>
                        <enumerationValue key="topEnd">Top end</enumerationValue>
                        <enumerationValue key="leftStart">Left start</enumerationValue>
                        <enumerationValue key="left">Left</enumerationValue>
                        <enumerationValue key="leftEnd">Left end</enumerationValue>
                        <enumerationValue key="bottomStart">Bottom start</enumerationValue>
                        <enumerationValue key="bottom">Bottom</enumerationValue>
                        <enumerationValue key="bottomEnd">Bottom end</enumerationValue>
                        <enumerationValue key="rightStart">Right start</enumerationValue>
                        <enumerationValue key="right">Right</enumerationValue>
                        <enumerationValue key="rightEnd">Right end</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="openOn" type="enumeration" defaultValue="hover">
                    <caption>Open on</caption>
                    <description>When to show the tooltip. On a mobile device the 'On hover', will be triggered on
                        touch.
                    </description>
                    <enumerationValues>
                        <enumerationValue key="click">Click</enumerationValue>
                        <enumerationValue key="hover">Hover</enumerationValue>
                        <enumerationValue key="hoverFocus">Hover &amp; focus</enumerationValue>
                    </enumerationValues>
                </property>
            </propertyGroup>
        </propertyGroup>
    </properties>
</widget>